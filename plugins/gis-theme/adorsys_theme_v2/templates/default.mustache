{{< theme_adorsys_theme_v1/default }}
    {{$body}}
        {{{ output.doctype }}}
        <html {{{ output.htmlattributes }}}>
        <head>
            <title>{{ page.title }}</title>
            <link rel="shortcut icon" href="{{ output.favicon }}" />
            {{{ output.standard_head_html }}}
        </head>
        <body {{{ output.body_attributes }}}>
            {{{ output.standard_top_of_body_html }}}

            <div id="page-wrapper" class="d-flex flex-column min-vh-100">
                {{> theme_adorsys_theme_v2/partials_navbar }}

                <div id="page" class="container-fluid d-flex flex-grow-1">
                    <div id="page-content" class="row flex-grow-1">
                        {{#hassidepre}}
                            <div id="region-main-box" class="col-md-9">
                                <div class="region-main-wrap">
                                    {{{ main_content }}}
                                </div>
                            </div>
                            <div id="region-pre" class="col-md-3">
                                <div class="region-pre-wrap">
                                    {{{ sidepre_blocks }}}
                                </div>
                            </div>
                        {{/hassidepre}}
                        {{^hassidepre}}
                            <div id="region-main-box" class="col-md-12">
                                <div class="region-main-wrap">
                                    {{{ main_content }}}
                                </div>
                            </div>
                        {{/hassidepre}}
                    </div>
                </div>

                {{> theme_adorsys_theme_v2/partials_footer }}
            </div>

            {{{ output.standard_end_of_body_html }}}
        </body>
        </html>
    {{/body}}
{{/ theme_adorsys_theme_v1/default }}