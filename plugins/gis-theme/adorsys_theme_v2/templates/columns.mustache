<!DOCTYPE html>
<html lang="{{ output.get_lang() }}">
<head>
    {{{ output.standard_head_html }}}
</head>
<body {{{ bodyattributes }}} class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">

    {{#hasnavbar}}
    <header class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-40">
        <div class="container mx-auto px-4">
            {{> theme_adorsys_theme_v2/navbar }}
        </div>
    </header>
    {{/hasnavbar}}

    <div class="flex flex-1 overflow-hidden">
        {{#sidepreblocks}}
        <!-- Sidebar (using your existing sidebar template) -->
        <aside id="region-side-pre"
               class="w-64 bg-white border-r border-gray-200 p-4 hidden md:block overflow-y-auto shadow-sm">
            {{> theme_adorsys_theme_v2/partials/sidebar }}
        </aside>
        {{/sidepreblocks}}

        <!-- Main Content -->
        <main id="region-main"
              class="flex-1 overflow-y-auto p-6 bg-gray-50">
            <div class="max-w-7xl mx-auto">
                {{{ maincontent }}}
            </div>
        </main>

        {{#sidepostblocks}}
        <!-- Right Sidebar -->
        <aside id="region-side-post"
               class="w-64 bg-white border-l border-gray-200 p-4 hidden lg:block overflow-y-auto shadow-sm">
            {{{ sidepostblocks }}}
        </aside>
        {{/sidepostblocks}}
    </div>

    {{#hasfooter}}
    <footer class="bg-gray-900 text-gray-200 mt-auto">
        <div class="container mx-auto px-4 py-6">
            {{{ footer }}}
        </div>
    </footer>
    {{/hasfooter}}

    {{{ output.standard_end_of_body_html }}}
</body>
</html>
