{{#sidepreblocks}}
<!-- Sidebar toggle button (hamburger icon) -->
<button
    id="sidebar-toggle"
    aria-label="Toggle sidebar"
    aria-expanded="false"
    class="sidebar-toggle"
>
    {{#pix}} menu, theme_adorsys_theme_v2 {{/pix}}
</button>

<!-- Sidebar -->
<aside id="sidebar" class="sidebar">
    <div class="sidebar-header">
        <button
            id="sidebar-close"
            aria-label="Close sidebar"
            class="sidebar-close"
        >
            {{#pix}} close, theme_adorsys_theme_v2 {{/pix}}
        </button>
        <h2 class="sidebar-title">Menu</h2>
    </div>
    <div class="sidebar-content">
        {{{ sidepreblocks }}}
    </div>
</aside>

<!-- Overlay -->
<div id="sidebar-overlay" class="sidebar-overlay"></div>

<style>
/* === Sidebar + Overlay Styling === */

/* Sidebar toggle (hamburger) button */
.sidebar-toggle {
    position: fixed;
    top: 4rem; /* below navbar position visually, but navbar will be covered when open */
    left: 1rem;
    z-index: 1040;
    background: rgba(255, 255, 255, 0.85);
    color: #374151; /* gray-700 */
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 0.5rem;
    padding: 0.5rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(4px);
    transition: all 0.2s ease;
    cursor: pointer;
}

.sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

/* Ensure JS 'hidden' class actually hides the toggle */
.sidebar-toggle.hidden { display: none; }

/* Sidebar base */
.sidebar {
    position: fixed;
    top: 0; /* cover the navbar */
    left: 0;
    width: 21rem; /* 336px */
    height: 100vh; /* cover full viewport */
    background: var(--b1, #ffffff);
    border-right: 1px solid var(--b2, #e5e7eb);
    box-shadow: 2px 0 12px rgba(0, 0, 0, 0.1);
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
    z-index: 1100; /* over navbar */
    display: flex;
    flex-direction: column;
}

/* Sidebar visible */
.sidebar.open {
    transform: translateX(0);
}

/* Sidebar header */
.sidebar-header {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
    padding: 1rem;
    border-bottom: 1px solid var(--b2, #e5e7eb);
    background: var(--b2, #f9fafb);
    position: sticky;
    top: 0;
    z-index: 10;
}

/* Close button */
.sidebar-close {
    background: none;
    border: none;
    color: #6b7280;
    font-size: 1.5rem;
    line-height: 1;
    cursor: pointer;
    transition: color 0.2s ease;
}

.sidebar-close:hover {
    color: #111827;
}

/* Title */
.sidebar-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    margin-left: 0.25rem;
}

/* Content area */
.sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
}

/* Overlay (background dim when sidebar is open) */
.sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(2px);
    z-index: 1090; /* below sidebar but above page */
    opacity: 0;
    transition: opacity 0.3s ease;
}

.sidebar-overlay.active {
    display: block;
    opacity: 1;
}

/* Large screen behavior: hide entirely */
@media (min-width: 1024px) {
    .sidebar { display: none !important; }
    .sidebar-toggle,
    .sidebar-close,
    .sidebar-overlay { display: none !important; }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("sidebar");
    const toggle = document.getElementById("sidebar-toggle");
    const closeBtn = document.getElementById("sidebar-close");
    const overlay = document.getElementById("sidebar-overlay");

    const openSidebar = () => {
        sidebar.classList.add("open");
        overlay.classList.add("active");
        toggle.classList.add("hidden");
        toggle.setAttribute("aria-expanded", "true");
    };

    const closeSidebar = () => {
        sidebar.classList.remove("open");
        overlay.classList.remove("active");
        toggle.classList.remove("hidden");
        toggle.setAttribute("aria-expanded", "false");
    };

    // Click handlers
    if (toggle) toggle.addEventListener("click", openSidebar);
    if (closeBtn) closeBtn.addEventListener("click", closeSidebar);
    if (overlay) overlay.addEventListener("click", closeSidebar);

    // Keyboard (Escape)
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && sidebar.classList.contains("open")) {
            closeSidebar();
        }
    });
});
</script>
{{/sidepreblocks}}
