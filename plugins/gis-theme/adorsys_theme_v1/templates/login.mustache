{{!
    @template theme_adorsys_theme_v1/login
    Login page template
}}
{{> theme_adorsys_theme_v1/head}}

<body data-templates="login" {{{bodyattributes}}}>

<div id="page-wrapper" class="login-wrapper">
    {{{output.standard_top_of_body_html}}}

    <div class="login-container">
        <div class="login-header text-center mb-4">
            <a href="{{{config.wwwroot}}}/?redirect=0" class="login-logo">
                {{{output.get_logo_rendering}}}
            </a>
            <h2 class="login-title mt-3 font-weight-bold">
                Sign in to your account
            </h2>
        </div>

        <div class="login-card card shadow-sm">
            <div class="card-body p-4">
                <div class="login-form-area">
                    {{{output.course_content_header}}}
                    {{{output.main_content}}}
                    {{{output.course_content_footer}}}
                </div>
            </div>
        </div>
        
        <div class="login-footer mt-4 text-center text-muted">
            <div class="footer-content-debugging">
                 {{{ output.standard_footer_html }}}
            </div>
        </div>
    </div>
</div>

{{{ output.standard_end_of_body_html }}}
</body>
</html>
{{#js}}
    require(['theme_boost/footer-popover', 'theme_boost/drawer', 'theme_boost/loader'],
        function(FooterPopover, Drawer, Loader) {
            FooterPopover.init();
            Drawer.init();
            M.util.js_complete('theme_boost/loader');
        });
{{/js}}
