{{!
    @template local_gis_ai_assistant/chat

    AI Chat interface template.

    Context variables required for this template:
    * user_name - Name of the current user
    * placeholder - Placeholder text for input
    * send_text - Send button text
    * clear_text - Clear button text
    * thinking_text - Thinking indicator text
    * model_info - Current model information
    * usage_info - Usage statistics
}}

<div class="ai-chat-container">
    <div class="ai-chat-header">
        <div class="ai-chat-header-main">
            <h3 class="ai-chat-title">
                <i class="fa fa-robot" aria-hidden="true"></i>
                {{#str}}chat_title, local_gis_ai_assistant{{/str}}
            </h3>
            <div class="ai-chat-model-info">
                <span class="ai-model-badge">
                    <i class="fa fa-microchip" aria-hidden="true"></i>
                    {{model_info.name}}
                </span>
                {{#usage_info}}
                <span class="ai-usage-badge" title="{{#str}}requests_remaining, local_gis_ai_assistant{{/str}}">
                    <i class="fa fa-clock" aria-hidden="true"></i>
                    {{requests_remaining}}/{{requests_limit}}
                </span>
                {{/usage_info}}
            </div>
        </div>
        <div class="ai-chat-controls">
            <button type="button" class="btn" id="ai-toggle-theme" title="{{#str}}toggle_theme, local_gis_ai_assistant{{/str}}">
                <i class="fa fa-adjust" aria-hidden="true"></i>
            </button>
            <button type="button" class="btn" id="ai-clear-chat" title="{{clear_text}}">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
            <button type="button" class="btn" id="ai-export-chat" title="{{#str}}export_chat, local_gis_ai_assistant{{/str}}">
                <i class="fa fa-download" aria-hidden="true"></i>
            </button>
        </div>
    </div>

    <div class="ai-chat-messages" id="ai-chat-messages">
        <div class="ai-message ai-system-message">
            <div class="ai-message-avatar">
                <i class="fa fa-robot" aria-hidden="true"></i>
            </div>
            <div class="ai-message-content">
                <p>{{#str}}ai_welcome, local_gis_ai_assistant{{/str}}</p>
            </div>
        </div>
    </div>

    <div class="ai-chat-input-container">
        <div class="ai-typing-indicator" id="ai-typing-indicator" style="display: none;">
            <div class="ai-message-avatar">
                <i class="fa fa-robot" aria-hidden="true"></i>
            </div>
            <div class="ai-typing-dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <span class="ai-typing-text">{{thinking_text}}</span>
        </div>

        <form id="ai-chat-form" class="ai-chat-form">
            <div class="input-group">
                <textarea 
                    id="ai-message-input" 
                    class="form-control ai-message-input" 
                    placeholder="{{placeholder}}"
                    rows="1"
                    maxlength="10000"
                    required></textarea>
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-primary ai-send-stream-button" id="ai-send-stream-button" title="{{#str}}send_stream, local_gis_ai_assistant{{/str}}">
                        <i class="fa fa-bolt" aria-hidden="true"></i>
                        <span class="sr-only">{{#str}}send_stream, local_gis_ai_assistant{{/str}}</span>
                    </button>
                    <button type="submit" class="btn btn-primary ai-send-button" id="ai-send-button">
                        <i class="fa fa-paper-plane" aria-hidden="true"></i>
                        <span class="sr-only">{{send_text}}</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="ai-chat-footer">
        <small class="text-muted">
            {{#str}}ai_disclaimer, local_gis_ai_assistant{{/str}}
        </small>
    </div>
</div>

