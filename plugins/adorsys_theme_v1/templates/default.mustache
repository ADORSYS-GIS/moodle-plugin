<!DOCTYPE html>
<html lang="{{ output.get_lang() }}">
<head>
    {{{ output.standard_head_html }}}
</head>
<body {{{ bodyattributes }}} class="bg-gray-100 min-h-screen">

    {{#hasnavbar}}
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-4">
            {{{ navbar }}}
        </div>
    </header>
    {{/hasnavbar}}

    <main id="page" class="max-w-7xl mx-auto p-4 grid grid-cols-12 gap-4">

        {{#hasblocks}}
        <aside id="region-side-pre" class="col-span-3">
            {{{ sidepreblocks }}}
        </aside>
        {{/hasblocks}}

        <section id="region-main" class="{{#hasblocks}}col-span-9{{/hasblocks}}{{^hasblocks}}col-span-12{{/hasblocks}}">
            <div class="card bg-white p-6 shadow">
                <h1 class="text-2xl font-bold mb-4">{{ pageheading }}</h1>
                {{{ maincontent }}}
            </div>
        </section>

    </main>

    {{#hasfooter}}
    <footer class="bg-gray-800 text-white mt-12">
        <div class="max-w-7xl mx-auto px-4 py-6">
            {{{ footer }}}
        </div>
    </footer>
    {{/hasfooter}}

    {{{ standardendhtml }}}
</body>
</html>
