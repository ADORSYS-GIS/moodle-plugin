<!DOCTYPE html>
<html lang="{{ output.get_lang() }}">
<head>
    {{{ output.standard_head_html }}}
</head>
<body {{{ bodyattributes }}}>

    {{#hasnavbar}}
    <header class="bg-gray-700 text-white py-4 px-6">
        {{{ navbar }}}
    </header>
    {{/hasnavbar}}

    <div class="flex">
        {{#hasblocks}}
        <aside class="w-64 p-4 bg-gray-100 border-r" data-region="blocks-column">
            {{{ sidepreblocks }}}
        </aside>
        {{/hasblocks}}

        <main class="flex-1 p-6">
            {{{ maincontent }}}
        </main>
    </div>

    {{#hasfooter}}
    <footer class="bg-gray-800 text-white text-center py-4">
        {{{ footer }}}
    </footer>
    {{/hasfooter}}

    {{{ output.standard_end_of_body_html }}}
</body>
</html>
