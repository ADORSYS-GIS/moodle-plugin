<!DOCTYPE html>
<html lang="{{ output.get_lang() }}">
<head>
    {{{ output.standard_head_html }}}
</head>
<body {{{ bodyattributes }}}>

    {{#hasnavbar}}
    <nav class="bg-indigo-600 text-white px-4 py-2">
        {{{ navbar }}}
    </nav>
    {{/hasnavbar}}

    <div class="flex">
        {{#hasblocks}}
        <aside class="w-64 bg-gray-200 p-4" data-region="blocks-column">
            {{{ sidepreblocks }}}
        </aside>
        {{/hasblocks}}

        <main class="flex-1 p-6">
            {{{ maincontent }}}
        </main>
    </div>

    {{#hasfooter}}
    <footer class="bg-gray-900 text-white py-4 text-center">
        {{{ footer }}}
    </footer>
    {{/hasfooter}}

    {{{ output.standard_end_of_body_html }}}
</body>
</html>
