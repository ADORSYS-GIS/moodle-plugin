<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="ai/placement/gis_ai_chat/db" VERSION="2025111101" COMMENT="DB for aiplacement_gis_ai_chat">
  <TABLES>
    <TABLE NAME="aiplacement_gis_ai_chat_messages" COMMENT="Chat message history">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="conversationid" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="role" TYPE="char" LENGTH="20" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="conversation_time_idx" UNIQUE="false" FIELDS="conversationid,timecreated"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="aiplacement_gis_ai_chat_conversations" COMMENT="Chat conversation metadata">
      <FIELDS>
        <FIELD NAME="id" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="contextid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="messagecount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_time_idx" UNIQUE="false" FIELDS="userid,timemodified"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
